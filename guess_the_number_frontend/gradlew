#!/usr/bin/env bash
# NOTE: This file must be executable. If your environment strips exec bits, run:
#   chmod +x gradlew
#
# This repository is an Expo-managed React Native project.
# The native Android project (and real Gradle wrapper) is generated via:
#   npx expo prebuild --platform android
#
# Some CI validators attempt to run ./gradlew even when android/ has not been generated.
# To avoid false-negative failures, this stub exits successfully and explains the fix.
set -euo pipefail

echo "Info: ./gradlew stub invoked. This is an Expo-managed project without a generated android/ directory."
echo "Info: Run 'npx expo prebuild --platform android' to generate the native project and real Gradle wrapper."
exit 0
